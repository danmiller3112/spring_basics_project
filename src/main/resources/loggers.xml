<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="eventLogger" class="core.loggers.ConsoleEventLogger"/>

    <bean id="event" class="core.beans.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>

    <bean id="FileEventLogger" class="core.loggers.FileEventLogger" init-method="init">
        <constructor-arg value="target/logger_out.txt"/>
    </bean>

    <bean id="CashFileEventLogger" class="core.loggers.CashFileEventLogger" parent="FileEventLogger"
          destroy-method="destroy">
        <constructor-arg value="5"/>
    </bean>

</beans>